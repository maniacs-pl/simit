element Point
  b : float;
  c : float;
  fixed : bool;
end

element Spring
end

extern points  : set{Point};
extern springs : set{Spring}(points,points);

func dist_a(s : Spring, p : (Point*2)) -> (A : tensor[points,points](float))
  if (p(0).fixed)
    A(p(0),p(0)) = 2.0;
  else
    A(p(0),p(0)) = 1.0;
  end
  if (p(1).fixed)
    A(p(1),p(1)) = 2.0;
  else
    A(p(1),p(1)) = 1.0;
  end
  A(p(0),p(1)) = 1.0;
  A(p(1),p(0)) = 1.0;
end

proc main 
  A = map dist_a to springs reduce +;
  println A;
  B = chol(A);
  println B;
  points.c = B * points.b;
end
